<link rel="stylesheet" href="~/css/index.css" />
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="about">
    <div class="container">
        @{Html.RenderPartial("About");}
    </div>

</div>

<div id="list">
    <div class="container">
        <div class="row">
            @await Component.InvokeAsync("Projects")
        </div>
    </div>
</div>

<div id="contact">
    <div class="container">
        <div class="row">
            @{Html.RenderPartial("Contact");}
        </div>
    </div>
</div>

@{
    string message = TempData["ConfirmMsg"] as string;
    if (!String.IsNullOrEmpty(message))
    {
        <div class="modal fade" id="email_sended_succes" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalLabel">Wiadomość wysłana</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @TempData["ConfirmMsg"]
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Ok</button>
                    </div>
                </div>
            </div>
        </div>
        @section Scripts {
            <script>
                $('#email_sended_succes').modal('show')
            </script>
        }
    }
}
